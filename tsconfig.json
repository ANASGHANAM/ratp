{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": ".",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "lib", "deploy", "./tests/**/*.ts", "/**/*.test.ts", "/**/__mocks__/**/*.ts"]
}
